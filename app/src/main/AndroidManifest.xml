            android:parentActivityName=".NavigationDrawer" />
        <activity android:name=".AddBasicsActivity" />
        <activity
            android:name=".DraftActivity"
            android:parentActivityName=".NavigationDrawer" />
        <activity
            android:name=".NavigationDrawer" />
        <activity android:name=".Main2Activity" />
        <activity
            android:name=".MyDeckActivity"
            android:parentActivityName=".NavigationDrawer" />
